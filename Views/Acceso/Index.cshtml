@model Usuario
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> </h1>


<div class="row mt-5">
    <div class="col-sm-4 offset-sm-4">

        <form asp-controller="Acceso" asp-Action="Index" method="post" style="background-color: black ; color: white ; border-radius: 40px; border-color: pink">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email </label>
                <input type="email" class="form-control" asp-for="Correo">

            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                <input type="password" class="form-control" asp-for="Clave">
            </div>


            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>

    </div>


</div>